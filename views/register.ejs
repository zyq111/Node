<%- include ./header.ejs %>
<div class="login">
    <form id="form" method="post" onsubmit="return false">
        <div class="login-title">注册</div>
        <div class="login-label">
            <input type="text" name="name" placeholder="请输入账号">
        </div>
        <div class="login-label">
            <input type="password" name="password" placeholder="请设置密码">
        </div>
        <div class="login-label">
            <input type="password" name="cpassword" placeholder="请确认密码">
        </div>
        <p>已有账号请 <a href="/">去登录</a></p>
        <div class="login-submit">
            <input type="button" value="立即注册" onclick="regiset()">
        </div>
    </form>
</div>
